#!groovy

def workerNode = "xp-build-i01"

pipeline {
	agent { label workerNode }
	environment {
		LOWELL_URL = credentials("lowell_db_connection_string")
	}
	triggers {
		cron("0 5 * * *")
	}
	options {
		timestamps()
	}
	stages {
		stage("search evaluation") {
			agent {
				docker {
					label workerNode
					image "docker.dbc.dk/build-env"
					alwaysPull true
				}
			}
			steps {
				sh "rm -rf seca2019"
				dir("seca2019") {
					git credentialsId: "gitlab-deploy-key",
						url: "gitlab@gitlab.dbc.dk:ai/seca2019.git"
				}
				sh """#!/usr/bin/env bash
					set -xe
					rm -rf env output
					python3 -m venv env
					source env/bin/activate
					pip install -U pip search-relevance-eval matplotlib
					pip install .
					evaluate-search http://simple-search-evaluation-1-0.mi-prod.svc.cloud.dbc.dk/search seca2019 output
				"""
				archiveArtifacts artifacts: "output/*.png,src/simple_search/data/html/evaluation.html"
			}
		}
	}
}
